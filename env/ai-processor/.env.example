# ==================== AI-Processor 配置 - 示例配置 ====================
# 此配置包含 AI-Processor 模块独有的配置
# 复制此文件为 .env.development 或 .env.production 并修改相应的值

# ==================== 服务器配置 ====================
AI_PROCESSOR_PORT=5000
AI_PROCESSOR_HOST=0.0.0.0
# 开发环境: True, 生产环境: False
AI_PROCESSOR_DEBUG=True

# ==================== 后端回调URL ====================
# 后端服务的URL,用于AI模块回调
# 开发环境: http://localhost:8080
# 生产环境: http://backend:8080 (Docker容器内通信)
BACKEND_BASE_URL=http://localhost:8080

# ==================== YOLO模型配置 ====================
YOLO_MODEL_PATH=weights/best.pt
# YOLO_MODEL_VERSION 已弃用，现在从模型检查点文件动态读取
# 开发环境: mps (Mac) / cuda (NVIDIA) / cpu
# 生产环境: 留空自动检测，或指定 cuda / cpu
YOLO_DEVICE=mps
YOLO_VERBOSE=False

# ==================== 追踪器配置 ====================
TRACKER_CONFIG=botsort.yaml

# BotSort详细参数
TRACK_HIGH_THRESH=0.5
TRACK_LOW_THRESH=0.1
NEW_TRACK_THRESH=0.6
TRACK_BUFFER=30
MATCH_THRESH=0.8
FUSE_SCORE=True
GMC_METHOD=None

# BotSort特有参数
WITH_REID=False
PROXIMITY_THRESH=0.5
APPEARANCE_THRESH=0.25

# ==================== 进度更新配置 ====================
# 开发环境: 1秒, 生产环境: 30秒
PROGRESS_UPDATE_INTERVAL=1
